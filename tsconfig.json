{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,

    "esModuleInterop": true,
    "module": "es2020",
    "moduleResolution": "node",
    "types": ["node"],

    "baseUrl": ".",
    "paths": {
      "begat/*": ["./package/src/*"]
    },

    "noEmit": true
  },
  "references": [{ "path": "./package" }, { "path": "./example/task" }],
  "include": ["**/*.spec.ts"]
}
