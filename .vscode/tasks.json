{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build",
      "type": "process",
      "command": "${workspaceFolder}/node_modules/.bin/tsc",
      "args": ["--build", "--watch"],
      "problemMatcher": ["$tsc-watch"],
      "group": { "kind": "build", "isDefault": true },
      "isBackground": true,
      "presentation": { "reveal": "never" },
      "runOptions": { "runOn": "folderOpen" }
    }
  ]
}
