{
  "packageManager": "pnpm@6.31.0",
  "private": true,
  "scripts": {
    "examples/project": "cd examples/project && pnpm",
    "examples/task": "cd examples/task && pnpm",
    "packages/assert": "cd packages/assert && pnpm",
    "packages/core": "cd packages/core && pnpm",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test:watch": "JEST_HIDE_USAGE=1 && pnpm run test -- --watch",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' jest",
    "test-ci": "pnpm test -- --ci",
    "lint": "pnpm lint:prettier -- --write && pnpm lint:eslint -- --fix",
    "lint-ci": "pnpm lint:prettier -- --check && pnpm lint:eslint -- --max-warnings=0",
    "lint:eslint": "eslint . --ext .ts",
    "lint:prettier": "prettier '**/[!pnpm-]*[!.d].{json,yaml,yml}' --loglevel=warn",
    "copy-docs": "cp README.md packages/core && cp LICENSE packages/core",
    "release": "pnpm build && pnpm copy-docs && changeset publish",
    "version": "changeset version && pnpm install",
    "docgen": "typedoc --entryPointStrategy packages 'packages/*'"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.4.3",
    "@changesets/cli": "^2.21.0",
    "@phyla/core": "workspace:*",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "eslint": "^8.9.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "^27.5.1",
    "jest-resolve": "^27.5.1",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "prettier": "^2.5.1",
    "ts-jest": "^27.1.3",
    "typedoc": "^0.22.12",
    "typescript": "^4.5.5"
  }
}
