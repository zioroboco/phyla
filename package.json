{
  "packageManager": "yarn@3.1.0",
  "private": true,
  "workspaces": [
    "example/*",
    "package"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "semi": false
  },
  "wallaby": {
    "autoDetect": true,
    "env": {
      "params": {
        "runner": "--no-warnings --experimental-vm-modules"
      }
    }
  },
  "scripts": {
    "begat": "cd example/project && yarn begat",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "node --no-warnings --experimental-vm-modules node_modules/.bin/jest",
    "lint": "yarn lint:prettier --write && yarn log:done prettier && yarn lint:eslint --fix && yarn log:done eslint",
    "lint-ci": "yarn lint:prettier --check && yarn log:done prettier && yarn lint:eslint --max-warnings=0 && yarn log:done eslint",
    "lint:eslint": "eslint . --ext .ts",
    "lint:prettier": "prettier '**/*[!.d].{json,yaml,yml}' --loglevel=warn",
    "log:done": "echo 'âœ” '",
    "copy-docs": "cp README.md package && cp LICENSE package",
    "release": "yarn build && yarn copy-docs && changeset publish",
    "version": "changeset version && yarn"
  },
  "devDependencies": {
    "@changesets/cli": "^2.18.1",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.0.3",
    "@types/node": "^16.11.11",
    "@typescript-eslint/eslint-plugin": "^5.5.0",
    "@typescript-eslint/parser": "^5.5.0",
    "@zioroboco/changelog-github": "https://github.com/zioroboco/changelog-github#v0.1.1",
    "eslint": "^8.3.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "^27.4.3",
    "prettier": "^2.5.0",
    "ts-expect": "^1.3.0",
    "ts-jest": "^27.0.7",
    "typescript": "^4.5.2"
  }
}
