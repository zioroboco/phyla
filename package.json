{
  "packageManager": "pnpm@6.31.0",
  "private": true,
  "prettier": {
    "arrowParens": "avoid",
    "semi": false
  },
  "wallaby": {
    "autoDetect": true,
    "env": {
      "params": {
        "runner": "--no-warnings --experimental-vm-modules"
      }
    }
  },
  "scripts": {
    "examples/project": "cd examples/project && pnpm",
    "examples/task": "cd examples/task && pnpm",
    "packages/assert": "cd packages/assert && pnpm",
    "packages/core": "cd packages/core && pnpm",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "test": "NODE_OPTIONS='--no-warnings --experimental-vm-modules' jest",
    "test-ci": "pnpm test -- --ci",
    "lint": "pnpm lint:prettier --write && pnpm log:done prettier && pnpm lint:eslint --fix && pnpm log:done eslint",
    "lint-ci": "pnpm lint:prettier --check && pnpm log:done prettier && pnpm lint:eslint --max-warnings=0 && pnpm log:done eslint",
    "lint:eslint": "eslint . --ext .ts",
    "lint:prettier": "prettier '**/*[!.d].{json,yaml,yml}' --loglevel=warn",
    "log:done": "echo 'âœ” '",
    "copy-docs": "cp README.md packages/core && cp LICENSE packages/core",
    "release": "pnpm build && pnpm copy-docs && changeset publish",
    "version": "changeset version && pnpm install"
  },
  "devDependencies": {
    "@changesets/cli": "^2.20.0",
    "@phyla/core": "*",
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "@zioroboco/changelog-github": "https://github.com/zioroboco/changelog-github#v0.1.1",
    "eslint": "^8.9.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "^27.5.1",
    "jest-resolve": "^27.5.1",
    "jest-ts-webcompat-resolver": "^1.0.0",
    "prettier": "^2.5.1",
    "ts-expect": "^1.3.0",
    "ts-jest": "^27.1.3",
    "typescript": "^4.5.5"
  }
}
