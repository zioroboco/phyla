{
  "private": true,
  "workspaces": [
    "begat",
    "example/*"
  ],
  "prettier": {
    "arrowParens": "avoid",
    "semi": false
  },
  "wallaby": {
    "autoDetect": true,
    "env": {
      "params": {
        "runner": "--no-warnings --experimental-vm-modules"
      }
    }
  },
  "scripts": {
    "core": "yarn workspace begat",
    "build": "yarn workspaces foreach run build",
    "clean": "yarn workspaces foreach run clean",
    "lint": "yarn lint:prettier --write && yarn log:done prettier && yarn lint:eslint --fix && yarn log:done eslint",
    "lint-ci": "yarn lint:prettier --check && yarn log:done prettier && yarn lint:eslint --max-warnings=0 && yarn log:done eslint",
    "lint:eslint": "eslint . --ext .ts",
    "lint:prettier": "prettier '**/*[!.d].{json,yaml,yml}' --loglevel=warn",
    "log:done": "echo 'âœ” '",
    "test": "node --no-warnings --experimental-vm-modules node_modules/.bin/jest"
  },
  "devDependencies": {
    "@tsconfig/node16": "^1.0.2",
    "@types/jest": "*",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^4.31.2",
    "@typescript-eslint/parser": "^4.31.2",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-sort-imports-es6-autofix": "^0.6.0",
    "jest": "^27.2.2",
    "prettier": "^2.4.1",
    "ts-expect": "^1.3.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.3"
  }
}
